---
import CardProjections from "./CardProjections.astro";

const { cardData, cardContent } = Astro.props;
---

<ul role="list" class="full-bleed">
  {cardData.values.map((projection) => <CardProjections {projection} />)}
</ul>

<style>
  @layer components {
    ul {
      display: flex;
      gap: var(--space-l);
      overflow-x: auto;
      grid-column: full;
      padding-inline: max(1rem, 50% - var(--content-width) / 2);
      scroll-snap-type: x mandatory;

      li {
        /* For den til at snappe til centeret af cardet, n√•r man scroller (tydeligst i mobil) */
        scroll-snap-align: center;
      }
    }
  }
</style>
