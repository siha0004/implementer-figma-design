---
import { Image } from "astro:assets";

import img1 from "../assets/images/hero-team.jpg";
import Topic from "./Topic.astro";

const { topic, heading } = Astro.props;
---

<section class="full-bleed">
  <Image src={img1} alt="Team image" />
  <article>
    <Topic>{topic}</Topic>
    <h1>{heading}</h1>
  </article>
</section>

<style>
  @layer components {
    section {
      display: grid;

      > :is(img, article) {
        grid-area: 1 / 1;
      }
      article {
        /* grid-column: content; */
        /* align-items: center; */
        max-width: 700px;
        background: var(--neutral-100-85);
        backdrop-filter: blur(5.5px);
        border-radius: var(--radius);
        display: flex;
        flex-direction: column;
        align-items: start;
        gap: var(--space-xs);

        padding: var(--space-3xl) var(--space-4xl);
        z-index: 1;
      }
    }
  }
</style>
