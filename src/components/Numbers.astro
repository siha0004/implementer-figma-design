---
const { number } = Astro.props;
---

<li>
  <h3>
    {number}+
  </h3>
  <p>
    <slot />
  </p>
</li>

<style>
  @layer components {
    li {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-xs);
    }

    h3 {
      font-size: var(--h1);
    }

    p {
      font-size: var(--step-0);
    }
  }
</style>
