<style>
  @layer components {
    section {
      display: grid;
      grid-template-columns: repeat(12, 1fr);
      gap: 2rem;

      > :first-child {
        grid-column: 1 / 6;
      }

      > :last-child {
        grid-column: 7 / -1;
      }
      ul {
        display: flex;
        flex-direction: column;
        gap: var(--space-xl);
      }
    }
  }
</style>
